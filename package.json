{
  "name": "cra-template-ego-typescript",
  "version": "0.0.0-development",
  "scripts": {
    "prepare": "husky install",
    "lint": "lint-staged",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "react",
    "create-react-app",
    "template",
    "typescript",
    "cra-template"
  ],
  "description": "My custom CRA template with TS",
  "main": "template.json",
  "repository": {
    "type": "git",
    "url": "https://github.com/iam2go/cra-template-ego-typescript.git"
  },
  "files": [
    "template",
    "template.json"
  ],
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ]
  },
  "lint-staged": {
    "template/src/**/*.{js,jsx,ts,tsx,json,css}": [
      "prettier --write"
    ],
    "template/src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@craco/craco": "^7.0.0",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.11",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/styled-components": "^5.1.26",
    "axios": "^1.2.3",
    "commitizen": "^4.2.6",
    "cz-customizable": "^7.0.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.6.2",
    "react-scripts": "5.0.1",
    "semantic-release": "^20.0.2",
    "styled-components": "^5.3.6",
    "typescript": "^4.9.4",
    "web-vitals": "^2.1.4"
  }
}
